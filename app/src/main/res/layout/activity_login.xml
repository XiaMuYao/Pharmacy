<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:background="#d63946"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView"/>

    <ImageView
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:id="@+id/imageView2">

    </ImageView>

    <ImageView
            android:layout_width="50dp"
            android:background="@mipmap/user"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:id="@+id/imageView3"/>


    <ImageView
            android:layout_width="50dp"
            android:background="@mipmap/phone"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:id="@+id/imageView4"/>


    <TextView
            android:layout_width="wrap_content"
            android:text="账号密码登录"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="手机号登录"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.45"/>


    <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/userview"/>


    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/user"
            app:layout_constraintTop_toTopOf="@+id/userview"
            app:layout_constraintBottom_toBottomOf="@+id/userview"
            app:layout_constraintStart_toStartOf="@+id/userview"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/imageView5"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/userview"
            app:layout_constraintBottom_toBottomOf="@+id/userview"
            android:id="@+id/textView"/>

    <EditText

            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/userview"

            app:layout_constraintTop_toTopOf="@+id/userview"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>


    <View
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:id="@+id/passview"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>

    <ImageView
            android:layout_width="20dp"
            android:background="@mipmap/mima"

            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="@+id/passview"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/passview"
            app:layout_constraintBottom_toBottomOf="@+id/passview"
            android:id="@+id/imageView6"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:text="密码"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/passview"
            app:layout_constraintBottom_toBottomOf="@+id/passview"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <EditText

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:inputType="textPassword"
            app:layout_constraintTop_toTopOf="@+id/passview"
            app:layout_constraintBottom_toBottomOf="@+id/passview"
            app:layout_constraintStart_toStartOf="@+id/username"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="59dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passview"
            android:id="@+id/view"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/yanzhengma"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"

            android:layout_marginLeft="8dp"
            android:layout_marginStart="12dp"
            android:id="@+id/imageView8"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="20dp"

            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/textView5"/>

    <EditText
            android:layout_width="86dp"
            android:layout_height="44dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            android:id="@+id/yanzhengma"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/editText2"
            />

    <Button
            android:id="@+id/denglu"
            android:layout_width="300dp"
            android:background="#4e6889"
            android:text="登录"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.505"/>

    <Button
            android:background="#4e6889"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/button"
            app:layout_constraintStart_toEndOf="@+id/yanzhengma"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@id/yanzhengma"
            app:layout_constraintEnd_toEndOf="@+id/view"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBaseline_toBaselineOf="@+id/yanzhengma"/>

    <android.support.constraint.Group

            app:constraint_referenced_ids="view, imageView8,textView5,yanzhengma,button"
            android:id="@+id/yanzhengmazu"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <android.support.constraint.Group

            app:constraint_referenced_ids="passview,editText2,imageView6,textView2"
            android:id="@+id/mimazu"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>