<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.YaoPinMessageActivity">


    <include
            layout="@layout/layout_title"
            android:id="@+id/include2"/>

    <ImageView
            android:id="@+id/yaopintupian"
            android:layout_width="150dp"
            android:layout_height="156dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/include2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            tools:text="药品代码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/yaopintupian"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/textView6"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/include2"/>

    <TextView
            tools:text="批准文号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView6"/>

    <TextView
            tools:text="生产企业"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="12dp"
            android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView7"/>

    <TextView
            tools:text="进口药品注册号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            />

    <TextView
            tools:text="规格型号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/textView9"/>

    <TextView
            android:id="@+id/youxiaoqi"
            tools:text="有效期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/yaopinxinxilist"
            android:layout_width="match_parent"
            android:layout_height="409dp"

            app:layout_constraintTop_toBottomOf="@+id/yaopintupian"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>