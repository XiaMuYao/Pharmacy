<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#d63946"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView"/>


    <View
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="150dp"
            android:id="@+id/thisview"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:ignore="MissingConstraints"/>

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@mipmap/user"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/imageView7"
            app:layout_constraintHorizontal_bias="0.501"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海分店"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            android:id="@+id/textView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="18944567578"

            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="0.538"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            android:id="@+id/textView4"/>

    <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点地点地点地点地点地点地点"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"/>


    <TextView
            android:id="@+id/yaopinruku"
            android:layout_width="131dp"
            android:layout_height="67dp"
            android:text="药品入库"
            android:textColor="#000000"

            android:gravity="center"
            android:background="#e9e9e9"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/thisview"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="@+id/thisview"
            />

    <TextView
            android:id="@+id/yaopinchuku"
            android:layout_width="131dp"
            android:layout_height="67dp"
            android:text="药品出库"
            android:textColor="#000000"

            app:layout_constraintEnd_toEndOf="@+id/thisview"
            android:gravity="center"
            android:background="#e9e9e9"
            app:layout_constraintBaseline_toBaselineOf="@+id/yaopinruku"/>


    <TextView
            android:id="@+id/yaopinchaxun"
            android:layout_width="131dp"
            android:textColor="#000000"

            android:layout_height="67dp"
            android:text="药品查询"
            android:gravity="center"
            android:background="#e9e9e9"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/yaopinruku"
            app:layout_constraintStart_toStartOf="@+id/yaopinruku"/>

    <TextView
            android:layout_width="131dp"
            android:layout_height="67dp"
            android:text="库存查询"
            android:gravity="center"
            android:textColor="#000000"

            android:background="#e9e9e9"
            app:layout_constraintEnd_toEndOf="@+id/yaopinchuku"
            app:layout_constraintBaseline_toBaselineOf="@+id/yaopinchaxun"
            android:id="@+id/kucunchaxun"/>


    <Button
            android:layout_width="131dp"
            android:layout_height="67dp"
            android:text="出库查询"
            android:textColor="#000000"

            android:gravity="center"
            android:background="#e9e9e9"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/yaopinchaxun"
            app:layout_constraintStart_toStartOf="@+id/yaopinchaxun"
            android:id="@+id/chukuchaxun"/>


    <Button
            android:id="@+id/rukuchaxun"
            android:layout_width="131dp"
            android:layout_height="67dp"
            android:text="入库查询"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#e9e9e9"
            app:layout_constraintEnd_toEndOf="@+id/kucunchaxun"
            app:layout_constraintBaseline_toBaselineOf="@+id/chukuchaxun"/>

</android.support.constraint.ConstraintLayout>